generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique
  name     String?
  password String
}

model Message {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  roomId    String
  sender    String
  message   String
  timestamp DateTime @default(now())
}



